{{> menu}}

  <form class="ui segment form" action="/station/{{station.id}}/updateReading/{{reading.id}} " method="POST">
  <div class="three fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="00" type="number" name="code" value="{{reading.code}}">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="00.0C" type="text" name="temperature" value="{{reading.temperature}}">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00.00kMh" type="number" name="windSpeed" value="{{reading.windSpeed}}">
    </div>
  </div>
  <div class="three fields">
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="000deg" type="text" name="windDirection" value="{{reading.windDirection}}">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="000hPa" type="number" name="pressure" value="{{reading.pressure}}">
    </div>
  </div>
  <button class="ui blue submit button"> Submit New Reading </button>
</form></section>


  
